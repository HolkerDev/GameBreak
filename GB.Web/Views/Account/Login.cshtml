@model GB.Web.Models.LoginView
@{
    ViewBag.Title = "Login";
}

<div class="col-md-offset-2 col-md-8" id="login">

        <h2 class="title">Login</h2>
        @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturlUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="container">
                <div class="form-signin">
                    <br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="form-label-group">
                            @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-md-2 label" })
                        </div>
                        <div class="col-md-5">
                            @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="form-label-group">
                            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2 label" })
                        </div>
                        <div class="col-md-5">
                            @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div><br />
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-2">
                                <input type="submit" value="Log In" class="btn btn-default title align-self-end" style="font-size: 130%; padding: 5px 30px 5px 30px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

</div>




