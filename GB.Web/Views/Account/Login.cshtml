@model GB.Web.Models.LoginView
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturlUrl }, FormMethod.Post)) {
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-signin">
            <h4>Logowanie do serwisu</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger"})
            <div class="row">
                <div class="form-label-group">
                    @Html.LabelFor(m=>m.Username, htmlAttributes: new { @class = "control-label col-md-2"})
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m=>m.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m=>m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-label-group">
                    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log In" class="btn btn-default"/>
                </div>
            </div>
        </div>
    </div>
}

