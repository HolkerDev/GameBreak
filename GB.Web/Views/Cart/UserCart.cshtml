@model List<GB.Data.Dto.AddToCartDto>
@{
    ViewBag.Title = "UserCart";
}

<h2>UserCart</h2>
@if(Model != null)
{
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Game Name</th>
            <th>Location </th>
            <th>Price</th>
        </tr>
        @foreach (var cartItem in Model)
        {
            <tr>
                <td>@cartItem.GameName</td>
                <td>@cartItem.LocationName</td>
                <td>@cartItem.Price</td>
            </tr>
        }
    </thead>
</table>
} else
{
    <h2>There are no items in cart yet. Go add them!</h2>
}
