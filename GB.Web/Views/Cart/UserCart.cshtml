@model List<GB.Data.Dto.AddToCartDto>
@{
    ViewBag.Title = "UserCart";
}

<h2>UserCart</h2>
@if(Model != null)
{
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Game Name</th>
            <th>Location </th>
            <th>Price</th>
            <th></th>
        </tr>
        @foreach (var cartItem in Model)
        {
            <tr>
                <td>@cartItem.GameName</td>
                <td>@cartItem.LocationName</td>
                <td>@cartItem.Price</td>
                <td>
                    <button id="btn_delete" class="label label-primary" data-slno="@cartItem.GameID" onclick="location.href='@Url.Action("Remove","Cart", cartItem)'">
                       Remove from Cart
                    </button>
                </td>
            </tr>
        }
    </thead>
</table>
<button>@Html.ActionLink("Checkout order", "Checkout", "Order")</button>
} else
{
    <h2>There are no items in Your cart yet. Go add them!</h2>
}
