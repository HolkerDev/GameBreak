@model GB.Web.ViewModels.ViewOrdersVM
@{
    ViewBag.Title = "ViewUserOrders";
}

<h2>My Orders</h2>

<br />
<table class="table table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>Name</th>
            <th>Expires In</th>
            <th>Is Returned</th>

        </tr>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td><a href="@Url.Action("Get","Order",new { orderID = order.ID})">@order.ID</a></td>
                <td>
                    @if (order.ExpiresAt >= DateTime.Now)
                    {
                        <span>@order.ExpiresAt.Subtract(order.CreatedAt).Days days</span>
                    }
                    else
                    {
                        <span>EXPIRED</span> 
                    }
                </td>
                <td>
                    @if(order.IsFinishedAt != null)
                    {
                        <span>Yes</span> 
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
            </tr>
        }
    </thead>
</table>

